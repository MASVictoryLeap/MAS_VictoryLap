<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mas_victoryleap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mas_victoryleap.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.ShowDetailsActivity"
            android:label="@string/title_activity_show_details" >
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.TopRatedActivity"
            android:label="@string/title_activity_top_rated" >
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.UtilitiesActivity"
            android:label="@string/title_activity_utilities" >
        </activity>
        <activity
            android:name="com.example.mas_victoryleap.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
    </application>

</manifest>
